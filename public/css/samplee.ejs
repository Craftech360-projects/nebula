#border {
  /* border: 1px solid black; */
  padding: 30px 0 30px 30px;
  border-radius: 20px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
/* Style the scrollbar track */
#voiceData2::-webkit-scrollbar {
  width: 10px; /* Adjust the scrollbar width as needed */
}

/* Style the scrollbar track */
#voiceData2::-webkit-scrollbar-track {
  background: transparent; /* Set a transparent background for the scrollbar track */
}

/* Style the scrollbar thumb */
#voiceData2::-webkit-scrollbar-thumb {
  background: transparent; /* Set a transparent color for the scrollbar thumb */
  border-radius: 10px; /* Add rounded corners to the scrollbar thumb */
}
.listening-animation {
  letter-spacing: 8px;
  font-size: 24px;
  font-weight: bold;
  animation: listening-animation 1.5s infinite;
}

.dots {
  opacity: 0;
  animation: dot-animation 1s infinite;
}


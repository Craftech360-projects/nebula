#voiceData {
  width: 90%;
  font-size: 16px;
  border: none;
  background-color: transparent;
  text-align: center;
  padding: 20px 20px;
  border-radius: 20px;
  margin-bottom: 10px;
  border: 1px solid black;
}

#voiceData2 {
  width: 90%;
  height: 50vh;
  font-size: 28px;

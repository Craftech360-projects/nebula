}
/* Spinner */
.spinner {
  margin-right: 10rem;
  --spinner-color: black;
  aspect-ratio: 1/1;
  border-radius: 50%;
  animation-name: spin;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}
.spinner--dotted {
  width: 5rem;
  border: 0.5rem dotted var(--spinner-color);
  display: block;
  animation-duration: 5s;
}
